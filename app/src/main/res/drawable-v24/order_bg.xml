<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FFE5B4" />
            <stroke
                android:width="1dp"
                android:color="#FFE5B4" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
        <item android:state_focused="true">
            <shape>
                <solid
                    android:color="#FFE5B4" />
                <stroke
                    android:width="1dp"
                    android:color="#FFE5B4" />
                <corners
                    android:radius="3dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </item>
    <item>
        <shape>
            <gradient
                android:startColor="#Ebf5ed"
                android:endColor="#Ebf5ed"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#Ebf5ed" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>