    <style name="Theme.TheDineInn.Fullscreen" parent="Theme.TheDineInn">
        <item name="android:actionBarStyle">@style/Widget.Theme.TheDineInn.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.TheDineInn.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="ThemeOverlay.MySwitch" parent="">
        <item name="android:colorControlActivated">#53933f</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="ThemeOverlay.MySwitchCompat" parent="">
        <item name="colorControlActivated">#53933f</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>
