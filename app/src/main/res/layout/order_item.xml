<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/order_bg"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<RelativeLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_alignParentTop="false"
            android:text="Order # "
            android:textColor="#000" />

        <TextView
            android:layout_toRightOf="@+id/txt"
            android:id="@+id/orderId"
            android:layout_alignParentTop="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="100"
            android:textColor="#000" />
        <TextView
            android:layout_toRightOf="@+id/orderId"
            android:id="@+id/tableName"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Table name"
            android:textColor="#000" />
        <TextView
            android:layout_toRightOf="@+id/tableName"
            android:id="@+id/tablePrice"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="000"
            android:textColor="#ff0000" />
        <TextView
            android:layout_toRightOf="@+id/tablePrice"
            android:id="@+id/tableStatus"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="000"
            android:textColor="#ff0000" />
</RelativeLayout>
        <TextView
            android:id="@+id/orderItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="10dp"/>

</LinearLayout>